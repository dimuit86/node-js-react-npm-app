// Declarative //
pipeline {
    agent any
    stages {

        stage('Checkout') {
            steps {
            git credentialsId: 'Github_Auth', url: 'https://github.com/jenkins-docs/simple-node-js-react-npm-app.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                sh './jenkins/scripts/kill.sh'
            }
        }
    }
}
// Script //
